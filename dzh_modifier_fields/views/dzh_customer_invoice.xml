<odoo>
	<data>
		<record id="dzh_customer_invoice_inherit_form" model="ir.ui.view">
            <field name="name">dzh.customer.invoice.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
				<xpath expr="//form/sheet/notebook/page[@name='other_info']/group/group[2]/field[@name='name']" position='attributes'>
					<attribute name="string">Quickbook Invoice Number</attribute>
				</xpath>
				<xpath expr="//form/sheet/notebook/page[@name='other_info']/group/group[2]/field[@name='name']" position='after'>
					<field name="cr_number" />
				</xpath>


			</field>
		</record>
	</data>
</odoo>